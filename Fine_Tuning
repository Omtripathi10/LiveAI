# Check if `create_dataloader` exists
if mdl and hasattr(mdl.lab3, "create_dataloader"):
    print("âœ… Function 'create_dataloader' exists.")
    
    try:
        # Try loading dataset with the "leprechaun" style
        train_loader, test_loader = mdl.lab3.create_dataloader(style="leprechaun")
        print("âœ… Dataset loaded successfully.")
        
        # Check dataset size
        if len(train_loader.dataset) == 0:
            print("âš ï¸ Warning: Dataset is empty!")
        
        # Try fetching a sample entry
        sample = train_loader.dataset[0]  # Change index if needed
        print(f"âœ… Sample Data Loaded: {sample}")

        # Extract and print question, answer, and style
        question = sample.get('instruction', 'âŒ Missing "instruction"')
        answer = sample.get('response', 'âŒ Missing "response"')
        answer_style = sample.get('response_style', 'âŒ Missing "response_style"')

        print(f"\nğŸ”¹ Question: {question}\nğŸ”¹ Answer: {answer}\nğŸ”¹ Style: {answer_style}")

    except Exception as e:
        print(f"âŒ Error while loading dataset: {e}")

else:
    print("âŒ Function 'create_dataloader' not found in mdl.lab3.")

    # Try manual dataset loading from CSV
    try:
        df = pd.read_csv("your_dataset.csv")  # Change to correct path
        print("âœ… CSV Dataset Loaded Successfully!")

        # Fetch a sample
        sample = df.iloc[0]  # Change index if needed
        question = sample.get("instruction", "âŒ Missing 'instruction'")
        answer = sample.get("response", "âŒ Missing 'response'")
        answer_style = sample.get("response_style", "âŒ Missing 'response_style'")

        print(f"\nğŸ”¹ Question: {question}\nğŸ”¹ Answer: {answer}\nğŸ”¹ Style: {answer_style}")

